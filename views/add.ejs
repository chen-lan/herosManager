<%- include("./layout/header.ejs") %>
<div class="container hero-list">
	<form action="/submit" id="form">
		<div class="form-group">
			<label>英雄名称</label>
			<input type="text" name="name" class="form-control" placeholder="请输入英雄名称" />
		</div>
		<div class="form-group">
			<label>英雄年龄</label>
			<input type="text" name="age" class="form-control" placeholder="请输入英雄年龄" />
		</div>
		<div class="form-group">
			<label>手机号码</label>
			<input type="text" name="phone" class="form-control" placeholder="请输入手机号码" />
		</div>
		<div class="form-group">
			<label>英雄地址</label>
			<input type="text" name="address" class="form-control" placeholder="请输入英雄地址" />
		</div>
		<div class="form-group">
			<label>英雄简介</label>
			<textarea name="description" class="form-control" placeholder="请输入英雄简介" rows="3"></textarea>
		</div>
		<div class="form-group">
			<label>英雄性别</label>
			<div class="radio">
				<label> <input type="radio" name="gender" value="男" checked />男 </label>
				<label> <input type="radio" name="gender" value="女" />女 </label>
			</div>
		</div>
		<button type="submit" class="btn btn-success">点击保存</button>
	</form>
</div>
<script src="/node_modules/jquery/dist/jquery.js"></script>
<%- include("./layout/footer.ejs") %>
